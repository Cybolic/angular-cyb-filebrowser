.filechooser
  .thumbnail
    .row-fluid
      height: 11em
      position: relative

  .breadcrumb
    margin-bottom: 0px
    li
      opacity: 0.5
      &.selectable
        cursor: hand; cursor: pointer
        opacity: 1
      .divider
        cursor: default
      &:nth-child(2):before
        content: ''

  .filelist
    height: 11em
    overflow: auto
    position: absolute

    &.column1 { left: 0 }
    &.column2 { left: 33% }
    &.column3 { left: 66% }

    li
      padding: 4px 0px 0px 0px
      cursor: hand; cursor: pointer
      border-bottom: 1px solid whiteSmoke

      .item-icon
        color: #6C9DC0
        background: transparent
        margin-left: .2em
        width: 1.5em
        overflow: none
        text-overflow: none
      .directory-indicator
        display: inline-block
        position: relative
        width: 0
        height: 0
        top: .4em
        margin-right: .2em
        vertical-align: middle
        border-left: .25em solid
        border-top: .25em solid transparent
        border-bottom: .25em solid transparent

      &.selected
        background: #2C5DCD
        color: white
        border-radius: .25em
        .icon-folder-close,
        .icon-folder-open
          // background: #2C5DCD
          color: white

      &.ellipsis
        width:100%
        text-overflow: ellipsis
        overflow: hidden


  .preview-filename
    font-weight: normal

  .file-preview
    img
      height: 90px
      width: auto

.upload-button
  position: relative
  overflow: hidden
  input
    opacity: 0
    z-index: 2
    position: relative

  // input[type="submit"
  //  @include background-gradient-vert(#fefefe, #f7f7f7, #f2f2f2)
  //
  button
    top: 0
    left: 0
    right: 0
    margin: 0
    z-index: 0
    position: absolute
    padding-top:5px


.modal>form
  margin: 0

